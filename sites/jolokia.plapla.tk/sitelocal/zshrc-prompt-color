PROMPT_SYM_BEGIN='%{%F{green}%}'
PROMPT_SYM_END='%{%f%}'
PROMPT_HOST_BEGIN='%{%F{white}%}'
PROMPT_HOST_END='%{%f%}'
PROMPT_USER_BEGIN='%{%F{white}%}'
PROMPT_USER_END='%{%f%}'
PROMPT_PWD_BEGIN='%{%F{white}%}'
PROMPT_PWD_END='%{%f%}'
if [ X0 = "X$(id -u)" ]
then
	PROMPT_SYM_COLOR=white
	PROMPT_HOST_COLOR=yellow
	PROMPT_USER_COLOR=yellow
	PROMPT_PWD_COLOR=yellow
fi
